---
import Layout from '../layouts/Layout.astro';

import SocialPill from '../components/SolcialPill.astro'
import SectionContainer from '../components/SectionContainer.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';

import LinkedInIcon from '../components/icons/LinkedIn.astro'
import Badge from '../components/Badge.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import MailIcon from '../components/icons/Mail.astro'
import BriefcaseIcon from '../components/icons/Briefcase.astro'
import CodeIcon from '../components/icons/Code.astro'


---

<Layout 
    title="Porfolio dev Hernán Casalderrey - Desarrollador y programador WEB con 15 años de experiencia."
    description = "">
	<main class="px-4">
        <SectionContainer class="py-44 pb-20">

            <img class="rounded-full size-12 mb-4 " 
        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT_Zu1EfYFegDtu0S28haRWu-_Ex98afZ4epnfqE_cvzw&s" alt="Hernán Casalderrey" >



            <h1 class="text-white text-3xl md:text-4xl lg:text-5xl text-bold flex flex-row gap-x-2 pb-6 lg:pb-10">
                Hey, Soy Hernán  
                <div class="flex justify-center items-center">
                    <a href="https://www.linkedin.com/in/hernan-casalderrey" 
                    target="_blank" 
                    rel="noopener noreferrer">
                        <Badge>Disponible para trabajar</Badge>
                    </a>
                </div>
            </h1>
            <h2 class="text-xl lg:text-2xl  text-wrap max-w-[700px] " >
                <span>+15 años de expediencia.</span> 
                <span class="text-yellow-200/90"> Desarrollador freelance Desktop y Web.</span> 
                <span class="text-red-100/90"> De Buenos Aires, Argentina.</span>
                <span class="opacity-75"> Especializado en en crear apliaciones únicas. </span>
            </h2>
            <nav class="flex gap-4 mt-8 flex-wrap">
                <SocialPill href="https://www.linkedin.com/in/hernan-casalderrey">
                    <LinkedInIcon class="size-4 md:size-6"/>LinkedIn
                </SocialPill>
                <SocialPill href="https://github.com/hcasalderrey">
                    <GitHubIcon class="size-4 md:size-6"/>GitHub
                </SocialPill>

                <SocialPill href="mailto:hjcasalderrey@gmail.com">
                    <MailIcon class="size-4 md:size-6"/>hjcasalderrey@gmail.com
                </SocialPill>

            </nav>
        </SectionContainer>
        <SectionContainer id="experiencia"> 
            <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 item-center ">
                <BriefcaseIcon class="size-7"/> Experiencia laboral</h2>
            <Experience />
        </SectionContainer>

        <SectionContainer id="proyectos" class="py-10"> 
            <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 item-center ">
                <CodeIcon class="size-7"/> Proyectos</h2>
            <Projects />
        </SectionContainer>
	</main>
</Layout>
 
